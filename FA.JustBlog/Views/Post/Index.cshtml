@using FA.JustBlog.Extensions
@model FA.JustBlog.Models.PostViewModel
@{
    ViewData["Title"] = "Post Page";
}

<!-- Page Header -->
@section Header {
    @await Html.PartialAsync("~/Views/Post/_Header.cshtml", Model);
}
<!-- Post Content -->


<div class="col-lg-8 col-md-10 mx-auto">
    <span class="meta">
        Posted by
        <a href="#">@Model.UrlSlug</a>
        on @* <friendly-date date="@Model.PostedOn"></friendly-date> *@
        @Model.PostedOn.ToFriendlyDate()
        with rate @Model.RateCount out of 5 by @Model.ViewCount view(s)

    </span>
    <h4>Category : @Model.Category.Name</h4>
    <h5>Tags : </h5>
    @foreach (var tag in Model.Tags)
    {
        <div class="d-flex">
            <span>#@tag.Name </span>
        </div>

    }
    <p>@Model.PostContent</p>

    <h2 class="section-heading">@Model.ShortDescription</h2>

