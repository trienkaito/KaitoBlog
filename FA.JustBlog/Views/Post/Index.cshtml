</div>
<hr />
<h2 class="section-heading">@Model.ShortDescription</h2>


    <!-- Comment Form -->
    @await Html.PartialAsync("_CommentForm", Model)
<!-- Comment Section -->


@section mostViewedPosts {
    @await Component.InvokeAsync("ListPost", new { type = "MostViewedPosts" })
}

@section latestPosts {
    @await Component.InvokeAsync("ListPost", new { type = "LatestPosts" })
}