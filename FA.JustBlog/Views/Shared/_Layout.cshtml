<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <link rel="stylesheet" href="~/FA.JustBlog.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/clean-blog.min.css" asp-append-version="true">
    <title>Clean Blog - Start Bootstrap Theme</title>

    <!-- Custom fonts for this template -->
    <link href="~/lib/fontawesome-free/css/all.min.css" rel="stylesheet" type="text/css">
    <link href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css'>
    <link href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css'>
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light fixed-top" id="mainNav">
        <div class="container">
            <a class="navbar-brand" href="index.html">Just Blog</a>
            <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                Menu
                <i class="fas fa-bars"></i>
            </button>
            <div class="collapse navbar-collapse flex-row-reverse" id="navbarResponsive">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="About" asp-action="Index">About</a>
                    </li>
                    @await Component.InvokeAsync("Categories")
                    <li class="nav-item">
                        <a class="nav-link" asp-area="" asp-controller="Contact" asp-action="Index">Contact</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
    @await RenderSectionAsync("Header", required: false)
    <div class="container">
        <div class="row">
            <div class="col-lg-9  mx-auto">
                @RenderBody()
            </div>
            <div class="col-lg-3 mx-auto">
                @await Html.PartialAsync("~/Views/Home/_PartialAboutCard.cshtml")
                <h4 class="mt-3"><b>Most Viewed Posts</b></h4>        
            
                
                @await RenderSectionAsync("mostViewedPosts", required: false)

                <h4><b>Lastest Posts</b></h4>
                @await RenderSectionAsync("latestPosts", required: false)

                @await Component.InvokeAsync("PopularTags")
            </div>
        </div>
    </div>

    @await Html.PartialAsync("~/Views/Shared/_Footer.cshtml")
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom scripts for this template -->
    <script src="~/js/clean-blog.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
